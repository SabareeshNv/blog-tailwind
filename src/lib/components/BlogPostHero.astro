<section class="grid">
    <div class="wrapper hero-head">
        <Date {pubDate} class="text-lg md:text-xl mb-2 lg:mb-4 text-shadow italic text-gray-100" />
        <h1 class="hero-title text-gray-100 text-3xl md:text-4xl lg:text-5xl font-semibold font-serif mb-8 lg:mb-10 text-shadow">{title}</h1>
    </div>
    <Image
        src={coverImage}
        alt={coverAlt}
        loading={"eager"}
        fetchpriority={"high"}
        decoding={"sync"}
        class="hero-image w-full aspect-video min-h-[40vh] max-h-[85vh]"
    />
</section>

<style>
    section {
        grid-template-columns: repeat(8, 1fr);
    }

    .hero-image,
    .hero-head {
        grid-row: 1 / -1;
    }

    .hero-head {
        grid-column: 1 / -1;
        z-index: 10;
        align-self: self-end;

        @media (min-width: 1024px) {
            grid-column: 2 / -2;
            
        }
    }

    .hero-image {
        grid-column: 1 / -1;
        width: 100%;
        background-color: rgb(55 65 81);
        filter: brightness(0.75);
    }

    h1 {
        line-height: 1.2;
        text-wrap: balance;
    }
</style>