---
import { Image } from "astro:assets";
import Date from "./Date.astro";

const { post, smallCard = false, isFirstPost = false } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article>
    <a href={`/post/${post.slug}/`}>
        <Image src={coverImage} alt={coverAlt} class="w-full aspect-video" />
    </a>

    <div class="mt-2">
        <Date {pubDate} class="mb-1 italic" />

        <h2
            class={`font-serif font-semibold leading-heading ${isFirstPost ? "text-2xl" : "text-xl"}`}
        >
            <a href={`/post/${post.slug}/`}>{title}</a>
        </h2>

        <div class={`leading-tight mt-4 ${smallCard ? "md:hidden" : ""}`}>
            {summary}
        </div>
    </div>
</article>
